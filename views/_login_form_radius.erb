<%= form_tag({:action => :radius_login}, {:id => 'radius_login', :class => 'uk-form rg-form'}) do %>
  <fieldset data-uk-margin>
    <legend>RADIUS login</legend>
    <div class="uk-form-row">
      <%= text_field_tag 'login', params[:login], :title => 'Login', :placeholder => 'login...', :class => 'uk-width-1-1', :autocorrect => :off, :autocapitalize => :off %>
    </div>
    <div class="uk-form-row">
      <%= password_field_tag 'password', '', :title => 'Password', :placeholder => 'password...', :class => 'uk-width-1-1' %>
    </div>
    <div class="uk-form-row">
      <%= select :radius_realm, :id,
        RadiusRealm.portal_auth.collect { |rr| [ rr.name, rr.id ] }, {}, {:class => 'uk-width-1-1'} %>
    </div>
    <div class="uk-form-row">
      <%= button_tag('Sign On', :class => 'uk-button uk-width-1-1 rg-button', :data => { :disable_with => 'Please wait...' }) %>
    </div>
  </fieldset>
<% end %>
