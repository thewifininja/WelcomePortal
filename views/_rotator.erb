<%
  # Select random rotatee(s) for the given URN
  rotatees = pick_rotatees(urn: urn.to_s, count: count ||= 1)
%>

<% if rotatees.any? %>

  <div class='uk-grid'>
  
    <% rotatees.in_groups_of(3, false) do |group| %>
      <% group.each do |rotatee| %>

        <div class="uk-width-small-1-1 uk-width-medium-1-<%= group.count %>">
          <%= rotatee.payload.html_safe %>
        </div>

      <% end %>
    <% end %>
    
  </div>
  
<% end %>
